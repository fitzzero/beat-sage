{
  "name": "@beatsage/server",
  "version": "0.1.0",
  "description": "Server-side application for Beat Sage",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint src --ext .ts",
    "logs": "tail -f logs/combined.log",
    "logs:recent": "tail -50 logs/combined.log",
    "logs:today": "grep $(date '+%Y-%m-%d') logs/combined.log || echo 'No logs found for today'",
    "logs:clean": "mkdir -p logs && echo '' > logs/combined.log && echo 'Logs cleared'",
    "db:push": "prisma db push --schema ../prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema ../prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema ../prisma/schema.prisma",
    "db:reset:dev": "prisma migrate reset --force --schema ../prisma/schema.prisma",
    "db:seed": "ts-node ./src/db/seed.ts",
    "docs:generate": "ts-node ./src/scripts/generateServiceDocs.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.59.0",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^5.12.2",
    "socket.io": "^4.7.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.1.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^30.0.5",
    "socket.io-client": "^4.8.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0"
  }
}
